test-suite statefulness-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       CorrectnessFuturesBasedMonad
                     , CorrectnessStreamsBasedMonad
  build-depends:       base
                     , statefulness
                     , mtl
                     , test-framework
                     , test-framework-hunit
                     , HUnit
                     , parallel
