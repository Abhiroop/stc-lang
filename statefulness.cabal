name:                statefulness
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://bitbucket.org/nrink/statefulness#readme
license:             BSD3
license-file:        LICENSE
author:              Norman Rink, Sebastian Ertel, Justus Adam
maintainer:          example@example.com
copyright:           2017 Norman Rink, Sebastian Ertel, Justus Adam
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:       Monad.FuturesBasedMonad
                       , Monad.StreamsBasedFreeMonad
                       , Monad.StreamsBasedExplicitAPI
                       -- debugging:
                       -- Debug.Scheduler
                       -- Debug.SchedulerInternal
                       , Data.Dynamic2
                       , Data.StateElement
                       , Type.Magic
                       , Monad.Generator
  if impl(ghc >= 8.2.0)
    other-modules:       Type.Magic.GHC8
  else
    other-modules:       Type.Magic.OldGHC
  build-depends:       base >= 4.7 && < 5,
                       mtl,
                       monad-par,
                       deepseq,
                       containers,
                       parallel,
                       abstract-par,
                       free,
                       async,
                       microlens,
                       microlens-mtl,
                       ohua-core,
                       data-default-class,
                       OneTuple,
                       vector,
                       monad-loops,
                       stm
  default-language:    Haskell2010
  -- ghc-options:         -auto-all -Wall -O2 -fPIC -ddump-to-file -ddump-simpl -dverbose-core2core -dsuppress-type-applications -dsuppress-coercions -dsuppress-module-prefixes  -dsuppress-idinfo
  ghc-options:         -auto-all -Wall -O2 -fPIC -fno-cse -ddump-to-file -ddump-simpl -dsuppress-type-applications -dsuppress-coercions -dsuppress-module-prefixes  -dsuppress-idinfo



